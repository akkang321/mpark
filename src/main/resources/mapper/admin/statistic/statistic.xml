<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.zenith.admin.statistic.dao.StatisticLoginDao">

	<select id="statisticLoginList" parameterType="hashmap" resultType="hashmap">
		<include refid="common.stratPage" />
			SELECT 		U_ID		,LOGIN_IP		,LOGIN_DATE		,LOG_ID
			FROM 		LOGIN_LOG
			<if test="sUId != null and sUId != ''">
			WHERE 		U_ID LIKE CONCAT('%',#{ sUId },'%') 
			</if>
		<include refid="common.endPage" />
	</select>


	<select id="loginCnt" parameterType="hashmap" resultType="int">
		SELECT COUNT(1) FROM LOGIN_LOG
	</select>

</mapper>

